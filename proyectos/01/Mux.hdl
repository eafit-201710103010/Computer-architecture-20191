/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 *
 * Implementado a base de ecuaci√≥n
 * booleana sacada de la tabla de verdad
 * y posteriormente reducida 
 *
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel,out=nsel);
    And(a=a,b=nsel,out=r1);
    And(a=b,b=sel,out=r2);
    Or(a=r1,b=r2,out=out);
}